generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Faculty {
  id              String       @id @default(cuid())
  name            String       @unique
  shortName       String       @unique
  dean            String
  establishedYear Int
  description     String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  departments     Department[]
}

model Department {
  id              String         @id @default(cuid())
  name            String
  head            String
  establishedYear Int
  totalStudents   Int            @default(0)
  description     String?
  facultyId       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  faculty         Faculty        @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  programs        Program[]
  researchAreas   ResearchArea[]
  staff           Staff[]

  @@unique([name, facultyId])
}

model Program {
  id           String     @id @default(cuid())
  name         String
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([name, departmentId])
}

model ResearchArea {
  id           String     @id @default(cuid())
  name         String
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([name, departmentId])
}

model Staff {
  id                   String        @id @default(cuid())
  name                 String
  email                String        @unique
  designation          String
  departmentId         String
  status               StaffStatus   @default(APPROVED)
  studentsSupervised   Int           @default(0)
  studentsSupervisedDetails Json?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  bio                  String?
  experienceYears      String?
  profileImage         String?
  qualifications       String?
  specialization       String?
  administrativeDuties String?
  teachingLoad         Json?
  courses              Course[]
  projects             Project[]
  publications         Publication[]
  department           Department    @relation(fields: [departmentId], references: [id], onDelete: Cascade)
}

model Publication {
  id        String   @id @default(cuid())
  title     String
  year      Int
  journal   String?
  staffId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model Project {
  id          String        @id @default(cuid())
  title       String
  description String?
  studentCount Int           @default(0)
  status      ProjectStatus @default(ONGOING)
  startDate   DateTime?
  endDate     DateTime?
  staffId     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  staff       Staff         @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model Course {
  id        String   @id @default(cuid())
  name      String
  credits   Int
  students  Int      @default(0)
  staffId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([name, staffId])
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  role      UserRole  @default(FACULTY)
  staffId   String?   @unique
  isActive  Boolean   @default(true)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  performedBy String
  targetType  String
  targetId    String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([performedBy, createdAt])
  @@index([targetType, targetId])
  @@index([createdAt])
}

enum StaffStatus {
  APPROVED
  PENDING
  REJECTED
}

enum ProjectStatus {
  ONGOING
  COMPLETED
  PENDING
}

enum UserRole {
  ADMIN
  FACULTY
  STUDENT
}
