generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Faculty {
  id              String       @id @default(cuid())
  name            String       @unique
  shortName       String       @unique
  dean            String
  establishedYear Int
  description     String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  departments     Department[]
}

model Department {
  id              String         @id @default(cuid())
  name            String
  head            String
  establishedYear Int
  totalStudents   Int            @default(0)
  description     String?
  facultyId       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  faculty         Faculty        @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  programs        Program[]
  researchAreas   ResearchArea[]
  staff           Staff[]

  @@unique([name, facultyId])
}

model Program {
  id           String     @id @default(cuid())
  name         String
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([name, departmentId])
}

model ResearchArea {
  id           String     @id @default(cuid())
  name         String
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([name, departmentId])
}

model Staff {
  id                   String        @id @default(cuid())
  name                 String
  email                String        @unique
  designation          String
  departmentId         String
  status               StaffStatus   @default(APPROVED)
  studentsSupervised   Int           @default(0)
  studentsSupervisedDetails Json?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  bio                  String?
  experienceYears      String?
  profileImage         String?
  qualifications       String?
  specialization       String?
  administrativeDuties String?
  teachingLoad         Json?
  courses              Course[]
  projects             Project[]
  publications         Publication[]
  department           Department    @relation(fields: [departmentId], references: [id], onDelete: Cascade)
}

model Publication {
  id              String          @id @default(cuid())
  title           String
  authors         String          // Comma-separated list or JSON array
  year            Int
  publicationType PublicationType @default(JOURNAL_ARTICLE)
  journal         String?         // Journal or Conference name
  volume          String?
  issue           String?
  pages           String?         // e.g., "123-145"
  publisher       String?
  doi             String?         // Digital Object Identifier
  isbn            String?         // For books
  issn            String?         // For journals
  abstract        String?         @db.Text
  keywords        String?         // Comma-separated keywords
  url             String?         // Link to publication
  pdfUrl          String?         // Direct link to PDF
  impactFactor    String?         // Journal impact factor
  indexedIn       String?         // e.g., "Scopus, Web of Science, PubMed"
  citationCount   Int             @default(0)
  verified        Boolean         @default(false) // Admin verified publication
  staffId         String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  staff           Staff           @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([year])
  @@index([publicationType])
  @@index([verified])
}

model Project {
  id             String        @id @default(cuid())
  title          String
  description    String?       @db.Text
  objectives     String?       @db.Text  // Project objectives and goals
  methodology    String?       @db.Text  // Research methodology
  outcomes       String?       @db.Text  // Project outcomes and results
  studentCount   Int           @default(0)
  fundingAmount  String?       // e.g., "PKR 2,000,000" or "USD 50,000"
  fundingAgency  String?       // e.g., "HEC", "NSF", "Industry Partner"
  collaborators  String?       // Names of collaborating researchers/institutions
  projectUrl     String?       // Link to project website or repository
  status         ProjectStatus @default(ONGOING)
  startDate      DateTime?
  endDate        DateTime?
  staffId        String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  staff          Staff         @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([status])
}

model Course {
  id        String   @id @default(cuid())
  name      String
  credits   Int
  students  Int      @default(0)
  staffId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([name, staffId])
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  role      UserRole  @default(FACULTY)
  staffId   String?   @unique
  isActive  Boolean   @default(true)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  performedBy String
  targetType  String
  targetId    String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([performedBy, createdAt])
  @@index([targetType, targetId])
  @@index([createdAt])
}

enum StaffStatus {
  APPROVED
  PENDING
  REJECTED
}

enum ProjectStatus {
  ONGOING
  COMPLETED
  PENDING
}

enum UserRole {
  ADMIN
  FACULTY
  STUDENT
}

enum PublicationType {
  JOURNAL_ARTICLE
  CONFERENCE_PAPER
  BOOK
  BOOK_CHAPTER
  THESIS
  PATENT
  TECHNICAL_REPORT
  WORKING_PAPER
  PREPRINT
}
